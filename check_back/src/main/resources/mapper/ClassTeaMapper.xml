<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kai.check.mapper.ClassTeaMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kai.check.pojo.ClassTea">
        <id column="id" property="id"/>
        <result column="class_name" property="className"/>
        <result column="tea_id" property="teaId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , class_name, tea_id, create_time, update_time
    </sql>
    <select id="listClasses" resultType="com.kai.check.pojo.ClassTea">
        select id,class_name
        from t_class_tea
        where tea_id=#{username}
        <if test="null!=classId">
            and id =#{classId}
        </if>
        <if test="className!=null and className!=''">
            and class_name like concat('%',#{className},'%')
        </if>
        order by id
    </select>

</mapper>
